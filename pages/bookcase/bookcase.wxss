.icon-list{
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.content-title{
  display: flex;
  justify-content: space-between;
  color: #fff;
  align-items: center;
  padding: 30rpx;
}
.introduce-view{
  font-size: 24rpx;
  color: #888e9e;
  position: relative;
  top: -5rpx;
}
.bookcaseList{
  display: flex;
  justify-content: space-around;
  padding: 0 10rpx;
  color: #fff;
}
.bookcaseMiddle{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  padding: 0 10rpx;
  color: #fff;
}
.bookcase-img{
  width: 200rpx;
  height: 300rpx;
}
.word{
  font-size: 32rpx;
  padding-top: 30rpx;
}
.authorName{
  color: #5d637c;
  font-size: 30rpx;
  padding: 10rpx;
  padding-bottom: 60rpx;
}